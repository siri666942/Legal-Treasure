/* pages/forget-password/forget-password.wxss - 完全复用登录紧凑样式 */
@import "../login/login.wxss";

/* 验证码组布局 - 与注册页一致 */
.code-group .code-wrapper {
  padding-right: 160rpx !important;
  position: relative;
}

.code-btn {
  position: absolute;
  right: 0;
  top: 0;
  height: 100%;
  width: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #1A5BFF;
  border-radius: 0 12rpx 12rpx 0;
  color: white;
  font-size: 26rpx;
  font-weight: 500;
  z-index: 10;
  transition: all 0.2s;
  border-left: 2rpx solid rgba(255,255,255,0.2);
}

.code-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

.code-btn-text {
  color: white;
}