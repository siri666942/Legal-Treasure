.test-container {
    display: flex;
    flex-direction: column;
    height: 100vh;
    background-color: #f5f5f5;
  }
  
  /* åˆ†ç±»æ ‡ç­¾æ ·å¼ */
  .category-tabs {
    background-color: #ffffff;
    padding: 20rpx 0;
    box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
    z-index: 10;
  }
  
  .tab-scroll {
    white-space: nowrap;
    width: 100%;
  }
  
  .tab-list {
    display: inline-flex;
    padding: 0 20rpx;
  }
  
  .tab-item {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20rpx 40rpx;
    margin-right: 30rpx;
    border-radius: 12rpx;
    background-color: #f8f9fa;
    transition: all 0.3s ease;
  }
  
  .tab-item.active {
    background-color: #1A5BFF;
    color: #ffffff;
  }
  
  .tab-icon {
    font-size: 32rpx;
    margin-bottom: 10rpx;
  }
  
  .tab-text {
    font-size: 24rpx;
    font-weight: 500;
  }
  
  /* ç»„ä»¶å±•ç¤ºåŒºåŸŸ */
  .component-area {
    flex: 1;
    padding: 30rpx;
  }
  
  .component-section {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  
  /* ç»„ä»¶å¡ç‰‡æ ·å¼ */
  .component-card {
    background-color: #ffffff;
    border-radius: 16rpx;
    overflow: hidden;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  }
  
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .component-name {
    font-size: 32rpx;
    font-weight: 600;
    color: #333333;
  }
  
  .card-actions {
    display: flex;
    gap: 20rpx;
  }
  
  .action-btn {
    font-size: 24rpx;
    padding: 8rpx 20rpx;
    background-color: #f0f2f5;
    border-radius: 8rpx;
    color: #666666;
    border: none;
  }
  
  .action-btn::after {
    border: none;
  }
  
  .card-content {
    padding: 30rpx;
  }
  
  .component-desc {
    font-size: 26rpx;
    color: #666666;
    margin-bottom: 30rpx;
    display: block;
  }
  
  /* æ¼”ç¤ºåŒºåŸŸæ ·å¼ */
  .demo-area {
    background-color: #f9f9f9;
    border-radius: 12rpx;
    padding: 30rpx;
    border: 1rpx solid #eee;
  }
  
  .button-demo {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  
  .demo-title {
    font-size: 28rpx;
    font-weight: 500;
    color: #333333;
    margin-bottom: 15rpx;
    display: block;
  }
  
  .button-group {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    margin-bottom: 15rpx;
  }
  
