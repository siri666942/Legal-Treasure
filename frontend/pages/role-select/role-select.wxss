/* pages/role-select/role-select.wxss - 适中尺寸版 */
.role-select-page {
    min-height: 100vh;
    background: linear-gradient(135deg, #1A5BFF 0%, #4D83FF 100%);
    padding: 30rpx 30rpx;
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
  }
  
  /* 背景装饰（不变） */
  .role-select-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(255,255,255,0.08) 0%, transparent 60%),
      radial-gradient(circle at 80% 70%, rgba(255,255,255,0.06) 0%, transparent 60%);
    z-index: 0;
  }
  
  /* ===== 欢迎区域（适中尺寸）===== */
  .welcome-section {
    text-align: center;
    margin: 120rpx 0 90rpx 0;    /* 原150/120 → 适中120/90 */
    padding: 0 20rpx;
    position: relative;
    z-index: 1;
    animation: fadeInDown 0.6s ease-out;
  }
  
  .welcome-title {
    display: block;
    font-size: 64rpx;            /* 原70 → 适中64 */
    font-weight: 800;
    color: #fff;
    margin-bottom: 24rpx;        /* 原30 → 适中24 */
    text-shadow: 0 4rpx 12rpx rgba(0,0,0,0.25);
    letter-spacing: 1.5rpx;
    line-height: 1.2;
  }
  
  .welcome-subtitle {
    font-size: 34rpx;            /* 原36 → 适中34 */
    color: rgba(255,255,255,0.95);
    font-weight: 400;
    letter-spacing: 0.8rpx;
    line-height: 1.6;
    max-width: 90%;
    margin: 0 auto;
    text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.2);
  }
  
  /* ===== 角色选择列表（间距适中）===== */
  .role-list {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 35rpx;                 /* 原40 → 适中35 */
    margin-bottom: 70rpx;       /* 原80 → 适中70 */
    position: relative;
    z-index: 1;
  }
  
  /* ===== 角色卡片（尺寸适中）===== */
  .role-card {
    background: rgba(255,255,255,0.98);
    border-radius: 26rpx;        /* 原30 → 适中26 */
    padding: 30rpx 34rpx;       /* 原35/40 → 适中30/34 */
    box-shadow: 
      0 14rpx 35rpx rgba(26,91,255,0.2),
      0 22rpx 45rpx rgba(0,0,0,0.1);
    border: 1px solid rgba(255,255,255,0.5);
    transition: all 0.4s cubic-bezier(0.4,0,0.2,1);
    position: relative;
    overflow: hidden;
    cursor: pointer;
  }
  
  .role-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6rpx;               /* 保持6rpx */
    background: linear-gradient(90deg, #1A5BFF, #4D83FF);
  }
  
  .role-card:active {
    transform: translateY(6rpx); /* 保持6rpx */
    box-shadow: 
      0 8rpx 20rpx rgba(26,91,255,0.15),
      0 14rpx 28rpx rgba(0,0,0,0.08);
  }
  
  .card-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  /* ===== 图标容器（适中）===== */
  .role-icon-wrapper {
    width: 120rpx;              /* 原140 → 适中120 */
    height: 120rpx;
    background: linear-gradient(135deg, #1A5BFF, #4D83FF);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 32rpx;        /* 原40 → 适中32 */
    flex-shrink: 0;
    box-shadow: 0 10rpx 22rpx rgba(26,91,255,0.25);
  }
  
  .role-icon {
    font-size: 60rpx;           /* 原70 → 适中60 */
  }
  
  /* ===== 文本区域（字体适中）===== */
  .role-text-wrapper {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
  }
  
  .role-title {
    display: block;
    font-size: 44rpx;           /* 原48 → 适中44 */
    font-weight: 800;
    color: #333;
    margin-bottom: 12rpx;       /* 原15 → 适中12 */
    letter-spacing: 1rpx;
  }
  
  .role-desc {
    font-size: 30rpx;           /* 原32 → 适中30 */
    color: #666;
    line-height: 1.5;
    opacity: 0.9;
  }
  
  /* ===== 箭头（适中）===== */
  .arrow-icon {
    font-size: 64rpx;           /* 原70 → 适中64 */
    color: #1A5BFF;
    margin-left: 26rpx;         /* 原30 → 适中26 */
    flex-shrink: 0;
    opacity: 0.8;
    font-weight: bold;
  }
  
  /* ===== 动画（保持不变）===== */
  @keyframes fadeInDown {
    from { opacity: 0; transform: translateY(-30rpx); }
    to { opacity: 1; transform: translateY(0); }
  }
  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30rpx); }
    to { opacity: 1; transform: translateY(0); }
  }
  @keyframes slideInLeft {
    from { opacity: 0; transform: translateX(-50rpx); }
    to { opacity: 1; transform: translateX(0); }
  }
  @keyframes slideInRight {
    from { opacity: 0; transform: translateX(50rpx); }
    to { opacity: 1; transform: translateX(0); }
  }
  
  .role-card.lawyer {
    animation: slideInLeft 0.6s ease-out 0.2s both;
  }
  .role-card.client {
    animation: slideInRight 0.6s ease-out 0.4s both;
  }
  
  /* ===== 卡片光效（不变）===== */
  .role-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, 
      transparent, 
      rgba(255,255,255,0.2), 
      transparent);
    transition: left 0.6s ease;
  }
  .role-card:active::after {
    left: 100%;
  }
  
  /* ===== 悬浮效果（桌面端）===== */
  .role-card:hover {
    transform: translateY(-6rpx);
    box-shadow: 
      0 18rpx 45rpx rgba(26,91,255,0.22),
      0 30rpx 60rpx rgba(0,0,0,0.12);
  }
  .role-card:active {
    background: rgba(255,255,255,0.95);
  }
  
  /* ===== 响应式（小屏）===== */
  @media (max-width: 375px) {
    .welcome-section {
      margin: 90rpx 0 70rpx 0;
    }
    .welcome-title {
      font-size: 56rpx;
      margin-bottom: 20rpx;
    }
    .welcome-subtitle {
      font-size: 32rpx;
      max-width: 95%;
    }
    .role-list {
      gap: 30rpx;
      margin-bottom: 60rpx;
    }
    .role-card {
      padding: 26rpx 30rpx;
      border-radius: 24rpx;
    }
    .role-icon-wrapper {
      width: 110rpx;
      height: 110rpx;
      margin-right: 28rpx;
    }
    .role-icon {
      font-size: 55rpx;
    }
    .role-title {
      font-size: 40rpx;
    }
    .role-desc {
      font-size: 28rpx;
    }
    .arrow-icon {
      font-size: 58rpx;
      margin-left: 22rpx;
    }
  }