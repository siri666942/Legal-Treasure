/* pages/login/login.wxss - 白框缩窄版 */
.login-container {
    min-height: 100vh;
    background: linear-gradient(135deg, #1A5BFF 0%, #3A7BFF 100%);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 40rpx;
    position: relative;
  }
  
  /* ----- Logo区域（保持原大）----- */
  .logo-section {
    text-align: center;
    margin: 60rpx 0 40rpx;
    z-index: 1;
  }
  
  .logo-circle {
    width: 160rpx;
    height: 160rpx;
    background: rgba(255,255,255,0.15);
    backdrop-filter: blur(10px);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 30rpx;
    border: 2rpx solid rgba(255,255,255,0.2);
    box-shadow: 0 15rpx 30rpx rgba(0,0,0,0.15);
  }
  
  .logo-icon {
    font-size: 80rpx;
    color: #fff;
  }
  
  .app-name {
    display: block;
    font-size: 64rpx;
    font-weight: 800;
    color: #fff;
    margin-bottom: 16rpx;
    letter-spacing: 2rpx;
    text-shadow: 0 4rpx 20rpx rgba(0,0,0,0.2);
  }
  
  .app-subtitle {
    font-size: 30rpx;
    color: rgba(255,255,255,0.9);
    letter-spacing: 1rpx;
  }
  
  /* ----- 表单卡片（已缩窄）----- */
  .form-section {
    background: #fff;
    border-radius: 28rpx;
    padding: 40rpx 30rpx;        /* 左右内边距从36rpx → 30rpx */
    width: 100%;
    max-width: 600rpx;           /* 最大宽度从680rpx → 600rpx */
    box-shadow: 0 20rpx 50rpx rgba(0,0,0,0.12);
    z-index: 1;
    position: relative;
    overflow: hidden;
    margin-bottom: 50rpx;
  }
  
  .form-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4rpx;
    background: linear-gradient(90deg, #1A5BFF, #3A7BFF);
  }
  
  /* ----- 以下所有样式保持紧凑版不变 ----- */
  .form-group {
    margin-bottom: 32rpx;
    position: relative;
  }
  
  .input-label {
    display: block;
    color: #2D3748;
    font-weight: 600;
    font-size: 28rpx;
    margin-bottom: 12rpx;
  }
  
  .input-wrapper {
    display: flex;
    align-items: center;
    background: #F8FAFC;
    border-radius: 12rpx;
    padding: 20rpx 24rpx;
    min-height: 80rpx;
    border: 2rpx solid #E5E9F2;
    transition: all 0.2s;
    box-sizing: border-box;
  }
  
  .input-wrapper:focus-within {
    border-color: #1A5BFF;
    box-shadow: 0 0 0 4rpx rgba(26,91,255,0.08);
  }
  
  .input-icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 16rpx;
  }
  
  .native-input {
    flex: 1;
    font-size: 28rpx;
    color: #1A293B;
    height: 40rpx;
    line-height: 40rpx;
    background: transparent;
    border: none;
    padding: 0;
  }
  
  .placeholder {
    color: #94A3B8;
    font-size: 28rpx;
  }
  
  .clear-btn {
    margin-left: 16rpx;
    width: 36rpx;
    height: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .clear-icon {
    font-size: 28rpx;
    color: #94A3B8;
  }
  
  .primary-btn {
    width: 100%;
    height: 88rpx;
    border-radius: 16rpx;
    font-size: 32rpx;
    font-weight: 600;
    background: linear-gradient(135deg, #1A5BFF, #3A7BFF);
    border: none;
    box-shadow: 0 8rpx 24rpx rgba(26,91,255,0.25);
    margin: 0;
    padding: 0;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s;
  }
  
  .primary-btn[disabled] { opacity: 0.6; box-shadow: none; }
  .primary-btn:active { transform: translateY(2rpx); }
  
  .default-btn {
    width: 100%;
    height: 80rpx;
    border-radius: 16rpx;
    font-size: 28rpx;
    font-weight: 500;
    background: #fff;
    border: 2rpx solid #1A5BFF;
    color: #1A5BFF;
    margin-top: 24rpx;
    box-shadow: 0 4rpx 16rpx rgba(26,91,255,0.08);
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .default-btn:active { background: rgba(26,91,255,0.05); }
  
  .link-section {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 40rpx;
    padding-top: 30rpx;
    border-top: 1rpx solid #E2E8F0;
    width: 100%;
  }
  
  .link-text {
    font-size: 26rpx;
    color: #1A5BFF;
    font-weight: 500;
    padding: 12rpx 30rpx;
    border-radius: 24rpx;
    transition: all 0.2s;
    text-align: center;
    flex: 1;
    margin: 0 8rpx;
    white-space: nowrap;
  }
  .link-text:active { background: rgba(26,91,255,0.1); }
  
  .divider {
    color: #CBD5E0;
    margin: 0 6rpx;
    font-size: 26rpx;
    font-weight: 300;
  }
  
  /* 响应式 - 小屏更窄 */
  @media (max-width: 375px) {
    .login-container { padding: 0 30rpx; }
    .form-section { 
      padding: 36rpx 24rpx;     /* 内边距进一步缩小 */
      max-width: 540rpx;         /* 小屏更窄 */
    }
    .logo-circle { width: 140rpx; height: 140rpx; }
    .logo-icon { font-size: 70rpx; }
    .app-name { font-size: 56rpx; }
  }