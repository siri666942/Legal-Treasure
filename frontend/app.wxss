/* app.wxss - 小程序全局样式 */

/* 导入公共样式 */
@import "./common/styles/variables.wxss";
@import "./common/styles/reset.wxss";
@import "./common/styles/mixins.wxss";
@import "./common/styles/animations.wxss";
@import "./common/styles/utilities.wxss";

/* 全局样式 */
page {
  background-color: var(--color-bg-primary);
  min-height: 100vh;
}

/* 自定义滚动条样式 */
::-webkit-scrollbar {
  width: 8rpx;
  height: 8rpx;
}

::-webkit-scrollbar-track {
  background: var(--color-gray-7);
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb {
  background: var(--color-gray-4);
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--color-gray-3);
}