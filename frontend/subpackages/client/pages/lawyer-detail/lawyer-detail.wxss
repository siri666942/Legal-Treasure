/* subpackages/client/pages/lawyer-detail/lawyer-detail.wxss */
.lawyer-detail-page {
    min-height: 100vh;
    background: linear-gradient(180deg, #f0f7ff 0%, #ffffff 100%);
    padding-bottom: 180rpx;
  }
  
  /* 权威头衔区域 - 去掉圆角 */
  .lawyer-authority-section {
    background: linear-gradient(135deg, #2a6df5 0%, #1a4cb5 100%);
    padding: 40rpx 30rpx 30rpx;
    color: #ffffff;
    margin-bottom: 20rpx;
    border-radius: 0;
  }
  
  .lawyer-header-card {
    display: flex;
    align-items: flex-start;
    margin-bottom: 30rpx;
  }
  
  .lawyer-avatar-wrapper {
    position: relative;
    margin-right: 30rpx;
  }
  
  .lawyer-avatar-emoji {
    font-size: 80rpx;
    width: 140rpx;
    height: 140rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #ffffff 0%, #f0f5ff 100%);
    border-radius: 50%;
    border: 6rpx solid rgba(255, 255, 255, 0.8);
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  }
  
  .lawyer-badge {
    position: absolute;
    bottom: 0;
    right: -10rpx;
    background: #ff9500;
    color: #ffffff;
    font-size: 20rpx;
    padding: 6rpx 12rpx;
    border-radius: 20rpx;
    font-weight: bold;
    transform: scale(0.9);
  }
  
  .lawyer-intro-section {
    flex: 1;
  }
  
  .lawyer-name {
    display: block;
    font-size: 44rpx;
    font-weight: 700;
    margin-bottom: 10rpx;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  }
  
  .lawyer-title {
    display: block;
    font-size: 28rpx;
    opacity: 0.9;
    margin-bottom: 20rpx;
  }
  
  .lawyer-organization {
    background: rgba(255, 255, 255, 0.15);
    border-radius: 12rpx;
    padding: 16rpx 20rpx;
  }
  
  .organization-name {
    display: block;
    font-size: 26rpx;
    font-weight: 500;
    margin-bottom: 6rpx;
  }
  
  .organization-rank {
    display: block;
    font-size: 22rpx;
    opacity: 0.8;
  }
  
  .honor-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
  }
  
  .honor-tag {
    background: rgba(255, 255, 255, 0.15);
    border: 1rpx solid rgba(255, 255, 255, 0.3);
    border-radius: 30rpx;
    padding: 12rpx 24rpx;
    font-size: 24rpx;
    font-weight: 500;
  }
  
  /* 整合信息模块 */
  .integrated-info-section {
    background: #ffffff;
    border-radius: 20rpx;
    margin: 0 30rpx 30rpx;
    padding: 30rpx;
    box-shadow: 0 8rpx 30rpx rgba(42, 108, 245, 0.1);
  }
  
  /* 执业信息网格 */
  .info-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20rpx;
    margin-bottom: 40rpx;
  }
  
  .info-item {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background: #f8faff;
    border-radius: 16rpx;
    border: 1rpx solid #e6f0ff;
  }
  
  .info-icon {
    font-size: 36rpx;
    margin-right: 20rpx;
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(42, 108, 245, 0.1);
    border-radius: 12rpx;
  }
  
  .info-content {
    flex: 1;
  }
  
  .info-label {
    display: block;
    font-size: 22rpx;
    color: #666666;
    margin-bottom: 8rpx;
  }
  
  .info-value {
    display: block;
    font-size: 26rpx;
    color: #1a4cb5;
    font-weight: 600;
    line-height: 1.3;
  }
  
  /* 统一标题样式 */
  .section-header {
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #f0f7ff;
  }
  
  .section-title {
    font-size: 30rpx;
    font-weight: 700;
    color: #1a4cb5;
    position: relative;
    padding-left: 20rpx;
  }
  
  .section-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6rpx;
    height: 24rpx;
    background-color: #2a6df5;
    border-radius: 3rpx;
  }
  
  /* 专业资质 */
  .qualification-section {
    margin-bottom: 40rpx;
  }
  
  .qualification-list {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  
  .qualification-item {
    display: flex;
    align-items: flex-start;
  }
  
  .qualification-label {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 30rpx;
    min-width: 120rpx;
  }
  
  .qualification-icon {
    font-size: 36rpx;
    margin-bottom: 10rpx;
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(42, 108, 245, 0.1);
    border-radius: 12rpx;
  }
  
  .qualification-text {
    font-size: 24rpx;
    color: #666666;
    text-align: center;
  }
  
  .qualification-value {
    flex: 1;
  }
  
  .qualification-main {
    display: block;
    font-size: 26rpx;
    color: #333333;
    font-weight: 600;
    margin-bottom: 8rpx;
  }
  
  .qualification-sub {
    display: block;
    font-size: 24rpx;
    color: #666666;
    line-height: 1.4;
  }
  
  /* 专业介绍 */
  .introduction-section {
    margin-bottom: 40rpx;
  }
  
  .introduction-content {
    background: #f8faff;
    border-radius: 16rpx;
    padding: 30rpx;
  }
  
  .introduction-text {
    display: block;
    font-size: 26rpx;
    color: #333333;
    line-height: 1.6;
  }
  
  /* 专业领域 */
  .expertise-section {
    margin-bottom: 10rpx;
  }
  
  .expertise-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
  }
  
  .expertise-tag {
    background: linear-gradient(135deg, #2a6df5 0%, #1a4cb5 100%);
    color: #ffffff;
    font-size: 24rpx;
    font-weight: 500;
    padding: 16rpx 28rpx;
    border-radius: 30rpx;
  }
  
  /* 专业数据统计 */
  .stats-section {
    background: #ffffff;
    border-radius: 20rpx;
    margin: 0 30rpx 30rpx;
    padding: 30rpx;
    box-shadow: 0 8rpx 30rpx rgba(42, 108, 245, 0.1);
  }
  
  .stats-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24rpx;
  }
  
  .stat-card {
    background: linear-gradient(135deg, #f8faff 0%, #f0f7ff 100%);
    border-radius: 20rpx;
    padding: 30rpx;
    text-align: center;
    border: 1rpx solid #e6f0ff;
  }
  
  .stat-number {
    display: block;
    font-size: 36rpx;
    font-weight: 700;
    color: #1a4cb5;
    margin-bottom: 8rpx;
  }
  
  .stat-label {
    display: block;
    font-size: 26rpx;
    color: #333333;
    font-weight: 600;
    margin-bottom: 4rpx;
  }
  
  .stat-desc {
    display: block;
    font-size: 22rpx;
    color: #666666;
  }
  
  /* 执业经历 */
  .experience-section {
    background: #ffffff;
    border-radius: 20rpx;
    margin: 0 30rpx 30rpx;
    padding: 30rpx;
    box-shadow: 0 8rpx 30rpx rgba(42, 108, 245, 0.1);
  }
  
  .experience-timeline {
    position: relative;
    padding-left: 40rpx;
  }
  
  .experience-timeline::before {
    content: '';
    position: absolute;
    left: 15rpx;
    top: 0;
    bottom: 0;
    width: 2rpx;
    background: #2a6df5;
  }
  
  .timeline-item {
    position: relative;
    margin-bottom: 40rpx;
  }
  
  .timeline-item:last-child {
    margin-bottom: 0;
  }
  
  .timeline-dot {
    position: absolute;
    left: -42rpx;
    top: 0;
    width: 30rpx;
    height: 30rpx;
    background: #ffffff;
    border: 4rpx solid #2a6df5;
    border-radius: 50%;
    z-index: 1;
  }
  
  .timeline-content {
    background: #f8faff;
    border-radius: 16rpx;
    padding: 24rpx;
  }
  
  .timeline-period {
    display: block;
    font-size: 24rpx;
    color: #2a6df5;
    font-weight: 600;
    margin-bottom: 8rpx;
  }
  
  .timeline-position {
    display: block;
    font-size: 26rpx;
    color: #333333;
    font-weight: 600;
    margin-bottom: 12rpx;
  }
  
  .timeline-detail {
    display: block;
    font-size: 24rpx;
    color: #666666;
    line-height: 1.5;
  }
  
  /* 代表性案例 */
  .case-section {
    background: #ffffff;
    border-radius: 20rpx;
    margin: 0 30rpx 30rpx;
    padding: 30rpx;
    box-shadow: 0 8rpx 30rpx rgba(42, 108, 245, 0.1);
  }
  
  .case-list {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  
  .case-card {
    background: #f8faff;
    border-radius: 20rpx;
    padding: 30rpx;
    border: 1rpx solid #e6f0ff;
  }
  
  .case-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20rpx;
  }
  
  .case-title {
    font-size: 28rpx;
    font-weight: 600;
    color: #1a4cb5;
    flex: 1;
    margin-right: 20rpx;
  }
  
  .case-type {
    font-size: 22rpx;
    color: #ffffff;
    background: #ff9500;
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
    font-weight: 500;
  }
  
  .case-detail {
    display: block;
    font-size: 24rpx;
    color: #333333;
    line-height: 1.5;
    margin-bottom: 20rpx;
  }
  
  .case-result {
    display: flex;
    align-items: flex-start;
  }
  
  .result-label {
    font-size: 24rpx;
    color: #666666;
    font-weight: 500;
    margin-right: 12rpx;
    white-space: nowrap;
  }
  
  .result-text {
    font-size: 24rpx;
    color: #1a4cb5;
    font-weight: 600;
    line-height: 1.4;
  }
  
  /* ===== 固定咨询按钮 - 直接展示，无蓝色卡片 ===== */
  .fixed-consult-section {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #ffffff;      /* 白色背景 */
    padding: 16rpx 30rpx 30rpx;
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
    z-index: 100;
  }
  
  /* 按钮容器，直接放置两个按钮 */
  .consult-actions {
    display: flex;
    gap: 20rpx;
  }
  
  /* 按钮样式：白色背景、蓝色文字、缩小尺寸 */
  .action-btn {
    flex: 1;
    height: 72rpx;
    border-radius: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8rpx;
    font-weight: 600;
    font-size: 26rpx;
    transition: all 0.3s ease;
    background: #ffffff;
    color: #2a6df5;
    border: 1rpx solid #2a6df5; /* 添加蓝色细边框，更清晰 */
    box-shadow: 0 2rpx 6rpx rgba(42, 108, 245, 0.1);
  }
  
  .action-btn:active {
    opacity: 0.8;
    transform: scale(0.98);
  }
  
  .btn-icon {
    font-size: 28rpx;
  }
  
  .btn-text {
    font-size: 26rpx;
    font-weight: 600;
  }
  
  /* 移除单独的 phone-btn/consult-btn 颜色定义，两者样式统一 */