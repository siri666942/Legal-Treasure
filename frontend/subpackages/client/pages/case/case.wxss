/* subpackages/client/pages/case/case.wxss - 客户端案件页面 */
.case-page {
    background-color: #f5f7fb;
    min-height: 100vh;
    padding-bottom: 140rpx;
  }
  
  /* ===== 搜索栏 ===== */
  .action-bar {
    padding: 28rpx 32rpx 20rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .search-container {
    display: flex;
    align-items: center;
    gap: 20rpx;
  }
  
  .search-input {
    flex: 1;
    background-color: #f8f9fa;
    border-radius: 40rpx;
    padding: 16rpx 24rpx;
    display: flex;
    align-items: center;
    border: 1rpx solid #e2e8f0;
  }
  
  .search-icon {
    font-size: 28rpx;
    color: #94a3b8;
    margin-right: 16rpx;
  }
  
  .search-input-inner {
    flex: 1;
    font-size: 28rpx;
    color: #1e293b;
    height: 40rpx;
    line-height: 40rpx;
  }
  
  .search-btn {
    background-color: #4a6cf7;
    color: white;
    padding: 16rpx 36rpx;
    border-radius: 40rpx;
    font-size: 28rpx;
    font-weight: 600;
    box-shadow: 0 2rpx 6rpx rgba(74,108,247,0.2);
    border: none;
    white-space: nowrap;
  }
  
  .search-btn:active {
    opacity: 0.8;
    transform: scale(0.96);
  }
  
  /* ===== 案件列表 - 紧凑卡片 ===== */
  .case-list {
    padding: 20rpx 24rpx;
  }
  
  .case-item {
    background-color: #fff;
    border-radius: 20rpx;
    padding: 24rpx;
    margin-bottom: 16rpx;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
    border: 1rpx solid #edf2f7;
    transition: all 0.2s;
  }
  
  .case-item:active {
    background-color: #f8fafc;
    border-color: #4a6cf7;
    transform: translateY(-2rpx);
    box-shadow: 0 4rpx 12rpx rgba(74,108,247,0.1);
  }
  
  /* 卡片头部 */
  .case-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
  }
  
  .case-no {
    font-size: 26rpx;
    color: #4a6cf7;
    font-weight: 600;
    background: #ebf8ff;
    padding: 4rpx 18rpx;
    border-radius: 30rpx;
  }
  
  .case-date {
    font-size: 24rpx;
    color: #94a3b8;
    white-space: nowrap;
  }
  
  /* 标题行 */
  .case-title-row {
    margin-bottom: 16rpx;
  }
  
  .case-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #1e293b;
    line-height: 1.4;
    display: block;
  }
  
  /* 律师/类型信息 */
  .case-info {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 12rpx 16rpx;
    background: #f8fafc;
    border-radius: 16rpx;
    padding: 16rpx 20rpx;
    margin-bottom: 20rpx;
    border: 1rpx solid #edf2f7;
  }
  
  .info-item {
    display: contents;
  }
  
  .info-label {
    font-size: 24rpx;
    color: #64748b;
    white-space: nowrap;
  }
  
  .info-value {
    font-size: 26rpx;
    color: #1e293b;
    font-weight: 500;
    word-break: break-word;
  }
  
  /* 进度条 */
  .progress-container {
    margin-bottom: 24rpx;
  }
  
  .progress-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8rpx;
  }
  
  .progress-label {
    font-size: 26rpx;
    color: #475569;
  }
  
  .progress-value {
    font-size: 26rpx;
    font-weight: 600;
    color: #4a6cf7;
  }
  
  .progress-bar {
    height: 8rpx;
    background: #e2e8f0;
    border-radius: 10rpx;
    overflow: hidden;
  }
  
  .progress-inner {
    height: 100%;
    border-radius: 10rpx;
    transition: width 0.3s;
  }
  
  .progress-processing { background: #4a6cf7; }
  .progress-completed { background: #38a169; }
  .progress-pending { background: #dd6b20; }
  
  /* 操作按钮 */
  .case-actions {
    display: flex;
    justify-content: flex-start;
    gap: 20rpx;
    border-top: 1rpx solid #edf2f7;
    padding-top: 20rpx;
  }
  
  .case-action {
    font-size: 26rpx;
    padding: 10rpx 28rpx;
    border-radius: 36rpx;
    font-weight: 500;
    transition: all 0.2s;
    background: #ebf8ff;
    color: #4a6cf7;
    border: 1rpx solid #bee3f8;
  }
  
  .case-action:active {
    background: #bee3f8;
    transform: scale(0.96);
  }
  
  /* ===== 空状态 ===== */
  .empty-state {
    text-align: center;
    padding: 100rpx 32rpx;
  }
  
  .empty-icon {
    font-size: 100rpx;
    color: #cbd5e0;
    margin-bottom: 24rpx;
  }
  
  .empty-title {
    display: block;
    font-size: 36rpx;
    color: #2d3e50;
    margin-bottom: 16rpx;
    font-weight: 700;
  }
  
  .empty-desc {
    display: block;
    font-size: 28rpx;
    color: #94a3b8;
  }
  
  /* ===== 底部添加案件按钮（非固定，紧凑间距）===== */
  .bottom-add-wrapper {
    display: flex;
    justify-content: center;
    margin: 16rpx 0 30rpx;  /* 上边距从 40rpx 减小到 16rpx，更贴近列表 */
    padding: 0 32rpx;
  }
  
  .bottom-add-btn {
    background: linear-gradient(135deg, #4a6cf7, #3a5ce5);
    color: white;
    padding: 24rpx 80rpx;
    border-radius: 50rpx;
    font-size: 32rpx;
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 16rpx;
    box-shadow: 0 4rpx 16rpx rgba(74,108,247,0.3);
    border: none;
    transition: all 0.2s;
  }
  
  .bottom-add-btn:active {
    opacity: 0.85;
    transform: scale(0.98);
    box-shadow: 0 2rpx 8rpx rgba(74,108,247,0.3);
  }
  
  .bottom-add-btn .btn-icon {
    font-size: 40rpx;
    line-height: 1;
  }
  
  .bottom-add-btn .btn-text {
    font-size: 32rpx;
    font-weight: 600;
  }
  
  /* ===== 底部导航栏（固定）===== */
  .custom-tabbar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120rpx;
    background: #fff;
    border-top: 1rpx solid #edf2f7;
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 0 20rpx;
    z-index: 1000;
    box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.02);
    backdrop-filter: blur(10px);
  }
  
  .tab-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    transition: all 0.2s;
  }
  
  .tab-item.active .tab-icon {
    transform: translateY(-6rpx);
  }
  
  .tab-item.active .tab-text {
    color: #4a6cf7;
    font-weight: 600;
  }
  
  .tab-icon {
    width: 48rpx;
    height: 48rpx;
    margin-bottom: 8rpx;
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;
    transition: transform 0.2s;
  }
  
