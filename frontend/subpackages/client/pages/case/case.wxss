  .tab-text {
    font-size: 24rpx;
    color: #999;
  }
  
  /* ===== 自定义绑定码浮窗（保持不变）===== */
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2000;
  }
  
  .modal-content {
    width: 80%;
    max-width: 600rpx;
    background-color: #fff;
    border-radius: 32rpx;
    overflow: hidden;
    box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.2);
  }
  
  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 28rpx 32rpx;
    border-bottom: 1rpx solid #e8f1ff;
    background-color: #f8fbff;
  }
  
  .modal-title {
    font-size: 34rpx;
    font-weight: 700;
    color: #1a365d;
  }
  
  .close-btn {
    font-size: 48rpx;
    color: #718096;
    line-height: 1;
    padding: 0 8rpx;
  }
  
  .close-btn:active {
    color: #4a6cf7;
  }
  
  .modal-body {
    padding: 40rpx 32rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .bind-code-section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
  .bind-code-label {
    font-size: 28rpx;
    color: #475569;
    margin-bottom: 24rpx;
    font-weight: 500;
  }
  
  .bind-code-input {
    width: 100%;
    height: 90rpx;
    background-color: #f8fafc;
    border: 2rpx solid #e2e8f0;
    border-radius: 20rpx;
    padding: 0 28rpx;
    font-size: 36rpx;
    font-weight: 600;
    color: #1e293b;
    text-align: center;
    letter-spacing: 4rpx;
    box-sizing: border-box;
    border-color: #4a6cf7;
    box-shadow: 0 0 0 2rpx rgba(74,108,247,0.2);
  }
  
  .bind-code-input:focus {
    border-color: #4a6cf7;
    box-shadow: 0 0 0 4rpx rgba(74,108,247,0.2);
  }
  
  .input-placeholder {
    font-size: 30rpx;
    color: #a0aec0;
    font-weight: normal;
    letter-spacing: normal;
  }
  
  .bind-tip {
    font-size: 24rpx;
    color: #64748b;
    margin-top: 24rpx;
  }
  
  .modal-actions {
    display: flex;
    padding: 0 32rpx 32rpx;
    gap: 20rpx;
  }
  
  .modal-actions .btn {
    flex: 1;
    height: 80rpx;
    border-radius: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    font-weight: 600;
    transition: all 0.2s;
  }
  
  .modal-actions .cancel-btn {
    background-color: #f8f9fa;
    color: #64748b;
    border: 1rpx solid #e2e8f0;
  }
  
  .modal-actions .confirm-btn {
    background-color: #4a6cf7;
    color: white;
    box-shadow: 0 4rpx 12rpx rgba(74,108,247,0.3);
  }
  
  .modal-actions .btn:active {
    opacity: 0.8;
    transform: scale(0.96);
  }