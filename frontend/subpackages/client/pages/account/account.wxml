<view class="account-page">
  <!-- 账户信息卡片 -->
  <view class="info-card">
    <view class="user-info">
      <view class="avatar-section" bindtap="changeAvatar">
        <block wx:if="{{userInfo.avatarUrl}}">
          <image class="avatar" src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
        </block>
        <block wx:else>
          <view class="avatar-placeholder">
            <text>{{userInfo.nickName ? userInfo.nickName.charAt(0) : '用'}}</text>
          </view>
        </block>
        <view class="avatar-edit">更换头像</view>
      </view>
      <view class="user-detail">
        <text class="user-name">{{userInfo.nickName || '用户'}}</text>
        <text class="user-phone">{{phoneDisplay}}</text>
      </view>
    </view>
  </view>

  <view class="settings-list">
    <view class="section-title">基础信息</view>
    
    <!-- 昵称（点击弹窗输入） -->
    <view class="setting-item" bindtap="editNickname">
      <text class="item-label">昵称</text>
      <view class="item-value">
        <text class="value-text">{{userInfo.nickName || '未设置'}}</text>
        <text class="item-arrow">›</text>
      </view>
    </view>
    
    <!-- 出生日期（点击弹窗输入，无需 picker） -->
    <view class="setting-item" bindtap="editBirthday">
      <text class="item-label">出生日期</text>
      <view class="item-value">
        <text class="value-text">{{userInfo.birthday || '未设置'}}</text>
        <text class="item-arrow">›</text>
      </view>
    </view>

    <view class="section-title">账户安全</view>
    
    <!-- 手机号（点击弹窗输入） -->
    <view class="setting-item" bindtap="changePhone">
      <text class="item-label">手机号</text>
      <view class="item-value">
        <text class="value-text">{{phoneDisplay}}</text>
        <text class="item-arrow">›</text>
      </view>
    </view>
    
    <!-- 修改密码（点击弹窗输入） -->
    <view class="setting-item" bindtap="changePassword">
      <text class="item-label">修改密码</text>
      <view class="item-value">
        <text class="value-text">●●●●●●</text>
        <text class="item-arrow">›</text>
      </view>
    </view>
  </view>

  <view class="logout-section">
    <view class="logout-btn" bindtap="logout">退出登录</view>
  </view>
</view>