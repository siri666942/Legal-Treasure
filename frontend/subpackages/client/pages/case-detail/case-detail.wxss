/* subpackages/client/pages/case-detail/case-detail.wxss */
page {
    background-color: #f5f7fa;
  }
  
  .container {
    padding: 20rpx 20rpx 60rpx;
    min-height: 100vh;
  }
  
  /* 案件头部（保持不变） */
  .case-header {
    background-color: white;
    border-radius: 16rpx;
    padding: 32rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 12rpx rgba(49, 130, 206, 0.1);
    border: 1rpx solid #e8f1ff;
  }
  .case-title-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
  }
  .case-title {
    font-size: 36rpx;
    font-weight: 600;
    color: #1a365d;
    flex: 1;
    line-height: 1.4;
  }
  .case-no-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .case-no {
    font-size: 28rpx;
    color: #666;
    font-weight: 500;
  }
  .copy-icon {
    font-size: 28rpx;
    color: #3182ce;
    padding: 8rpx;
  }
  
  /* 卡片通用样式（保持不变） */
  .card {
    background-color: #fff;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 12rpx rgba(49, 130, 206, 0.1);
    border: 1rpx solid #e8f1ff;
    overflow: hidden;
  }
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 28rpx 32rpx;
    background-color: #f8fbff;
    border-bottom: 1rpx solid #e8f1ff;
  }
  .card-title-with-icon {
    display: flex;
    align-items: center;
  }
  .card-icon {
    width: 48rpx;
    height: 48rpx;
    border-radius: 8rpx;
    background-color: #3182ce;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 16rpx;
  }
  .card-icon .icon {
    font-size: 28rpx;
    color: #fff;
  }
  .card-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #1a365d;
  }
  .card-content {
    padding: 32rpx;
  }
  
  /* 折叠图标（保持不变） */
  .collapse-icon {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: #3182ce;
  }
  .collapse-icon .icon {
    margin-right: 8rpx;
    font-size: 24rpx;
  }
  .collapse-text {
    font-size: 26rpx;
  }
  
  /* 折叠状态简略显示（保持不变） */
  .collapsed-content {
    padding: 20rpx 32rpx;
    background-color: #f8fbff;
    border-top: 1rpx solid #e8f1ff;
  }
  .collapsed-items {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
  }
  .collapsed-item {
    display: flex;
    align-items: center;
    padding: 12rpx 20rpx;
    background-color: #fff;
    border-radius: 8rpx;
    border: 1rpx solid #e8f1ff;
    box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  }
  .collapsed-dot {
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    margin-right: 12rpx;
  }
  .collapsed-dot.completed {
    background-color: #38a169;
  }
  .collapsed-dot.in-progress {
    background-color: #3182ce;
  }
  .collapsed-dot.upcoming {
    background-color: #e2e8f0;
  }
  .collapsed-avatar {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 12rpx;
    color: white;
    font-size: 24rpx;
    font-weight: 500;
  }
  .collapsed-text {
    font-size: 26rpx;
    color: #4a5568;
  }
  
  /* ===== 案件基本信息（保持不变）===== */
  .info-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 32rpx 40rpx;
  }
  .info-item {
    display: flex;
    flex-direction: column;
  }
  .label {
    font-size: 26rpx;
    color: #718096;
    margin-bottom: 8rpx;
    line-height: 1.4;
  }
  .value {
    font-size: 30rpx;
    color: #2d3748;
    font-weight: 500;
    line-height: 1.4;
  }
  .status-badge {
    display: inline-block;
    padding: 6rpx 20rpx;
    border-radius: 20rpx;
    font-size: 24rpx;
    font-weight: 500;
  }
  .status-active {
    background-color: rgba(56, 161, 105, 0.1);
    color: #38a169;
    border: 1rpx solid rgba(56, 161, 105, 0.3);
  }
  
  /* ===== 时间轴（保持不变）===== */
  .timeline {
    position: relative;
    padding-left: 40rpx;
  }
  .timeline::before {
    content: '';
    position: absolute;
    left: 15rpx;
    top: 0;
    bottom: 0;
    width: 2rpx;
    background: linear-gradient(to bottom, #3182ce, #38a169);
  }
  .timeline-item {
    position: relative;
    margin-bottom: 40rpx;
    display: flex;
  }
  .timeline-item:last-child {
    margin-bottom: 0;
  }
  .timeline-dot {
    position: absolute;
    left: -40rpx;
    top: 8rpx;
    width: 24rpx;
    height: 24rpx;
    border-radius: 50%;
    z-index: 1;
    border: 3rpx solid #fff;
    box-shadow: 0 0 0 2rpx #3182ce;
  }
  .timeline-dot.completed {
    background-color: #38a169;
    box-shadow: 0 0 0 2rpx rgba(56, 161, 105, 0.3);
  }
  .timeline-dot.in-progress {
    background-color: #3182ce;
    box-shadow: 0 0 0 2rpx rgba(49, 130, 206, 0.3);
  }
  .timeline-dot.upcoming {
    background-color: #e2e8f0;
    box-shadow: 0 0 0 2rpx rgba(49, 130, 206, 0.2);
  }
  .timeline-content {
    display: flex;
    flex-direction: column;
    width: 100%;
  }
  .timeline-date {
    font-size: 26rpx;
    color: #3182ce;
    margin-bottom: 4rpx;
    font-weight: 500;
  }
  .timeline-event {
    font-size: 30rpx;
    color: #1a1a1a;
    font-weight: 500;
    line-height: 1.4;
    margin-bottom: 8rpx;
  }
  .timeline-desc {
    font-size: 26rpx;
    color: #666;
    line-height: 1.5;
  }
  
  /* ===== 关联卷宗（保持不变）===== */
  .documents-grid {
    display: flex;
    flex-direction: column;
    gap: 20rpx;
  }
  .document-item {
    display: flex;
    align-items: center;
    padding: 24rpx;
    background-color: #f8fbff;
    border-radius: 12rpx;
    border: 1rpx solid #e8f1ff;
    transition: all 0.2s;
  }
  .document-item:active {
    background-color: #e6f7ff;
  }
  .document-info {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  .document-name {
    font-size: 30rpx;
    color: #1a365d;
    margin-bottom: 4rpx;
    font-weight: 500;
  }
  .document-meta {
    font-size: 24rpx;
    color: #718096;
    margin-bottom: 4rpx;
  }
  .document-uploader {
    font-size: 24rpx;
    color: #3182ce;
  }
  .document-more {
    font-size: 48rpx;
    color: #718096;
    padding: 0 20rpx;
    font-weight: 600;
    line-height: 1;
  }
  .document-more:active {
    color: #3182ce;
  }
  
  /* ===== 案件相关方（保持不变）===== */
  .parties-container {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
  }
  .party-card {
    background-color: #f8fbff;
    border-radius: 12rpx;
    padding: 24rpx;
    border: 1rpx solid #e8f1ff;
    position: relative;
    transition: all 0.2s;
  }
  .party-card:active {
    background-color: #e6f7ff;
    transform: translateY(-2rpx);
  }
  .party-header {
    display: flex;
    align-items: center;
    margin-bottom: 16rpx;
  }
  .party-avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 16rpx;
    color: white;
    font-size: 24rpx;
    font-weight: 500;
  }
  .party-plaintiff {
    background: linear-gradient(135deg, #e53e3e, #c53030);
  }
  .party-defendant {
    background: linear-gradient(135deg, #3182ce, #2b6cb0);
  }
  .party-agent {
    background: linear-gradient(135deg, #38a169, #2f855a);
  }
  .party-witness {
    background: linear-gradient(135deg, #718096, #4a5568);
  }
  .party-title {
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  .party-name {
    font-size: 28rpx;
    color: #1a365d;
    font-weight: 500;
    margin-bottom: 4rpx;
  }
  .party-type {
    font-size: 22rpx;
    color: #718096;
    background-color: #f0f0f0;
    padding: 2rpx 8rpx;
    border-radius: 4rpx;
    align-self: flex-start;
  }
  .party-details {
    display: flex;
    flex-direction: column;
    gap: 4rpx;
    margin-bottom: 12rpx;
  }
  .party-role {
    font-size: 26rpx;
    color: #3182ce;
    font-weight: 500;
  }
  .party-contact, .party-address {
    font-size: 24rpx;
    color: #666;
  }
  
  /* ===== 联系律师按钮 - 适中尺寸 ===== */
  .contact-lawyer-wrapper {
    display: flex;
    justify-content: center;
    margin: 40rpx 0 30rpx;
    padding: 0 32rpx;
  }
  
  .contact-lawyer-btn {
    background: #3182ce;          /* 纯蓝色 */
    color: white;
    padding: 20rpx 64rpx;        /* 适中内边距 */
    border-radius: 48rpx;        /* 圆角 */
    font-size: 30rpx;           /* 适中字体 */
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 12rpx;
    box-shadow: 0 4rpx 12rpx rgba(49, 130, 206, 0.25); /* 适度阴影 */
    border: none;
    transition: all 0.2s;
  }
  
  .contact-lawyer-btn:active {
    opacity: 0.8;
    transform: scale(0.98);
    box-shadow: 0 2rpx 8rpx rgba(49, 130, 206, 0.25);
  }
  
  .contact-lawyer-btn .btn-icon {
    font-size: 32rpx;
    line-height: 1;
  }
  
  .contact-lawyer-btn .btn-text {
    font-size: 30rpx;
    font-weight: 600;
  }
  
  /* 响应式调整 */
  @media (max-width: 750rpx) {
    .info-grid {
      grid-template-columns: 1fr;
      gap: 24rpx;
    }
    .parties-container {
      grid-template-columns: 1fr;
    }
    .contact-lawyer-btn {
      padding: 18rpx 56rpx;      /* 窄屏时略缩，但仍保持适中 */
      font-size: 28rpx;
    }
  }