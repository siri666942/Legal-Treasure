/* pages/client-chat/client-chat.wxss */
/* 用户端沟通页面样式 */
.chat-page {
    background-color: #f5f7fb;
    min-height: 100vh;
    padding-bottom: 140rpx;
  }
  
  /* 消息列表 */
  .message-list {
    padding: 24rpx;
  }
  
  .message-item {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 32rpx;
    margin-bottom: 20rpx;
    display: flex;
    align-items: center;
    gap: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
    border: 1rpx solid #f0f0f0;
    transition: all 0.3s ease;
  }
  
  .message-item:active {
    background-color: #f9f9f9;
    transform: translateY(-2rpx);
  }
  
  .message-item.top-item {
    border-left: 6rpx solid #1890ff;
    background-color: #fff;
  }
  
  /* 头像区域 */
  .avatar-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 80rpx;
    height: 80rpx;
    flex-shrink: 0;
  }
  
  .avatar {
    font-size: 48rpx;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    line-height: 1;
  }
  
  /* 优化头像颜色 */
  .avatar.system {
    background-color: #e6f7ff;
    color: #1890ff;
    border: 2rpx solid #91d5ff;
  }
  
  .avatar.ai {
    background-color: #f6ffed;
    color: #52c41a;
    border: 2rpx solid #b7eb8f;
  }
  
  .avatar.lawyer {
    background-color: #fff7e6;
    color: #fa8c16;
    border: 2rpx solid #ffd591;
  }
  
  .avatar.lawyer_assistant {
    background-color: #f9f0ff;
    color: #722ed1;
    border: 2rpx solid #d3adf7;
  }
  
  .unread-dot {
    position: absolute;
    top: 0;
    right: 0;
    width: 16rpx;
    height: 16rpx;
    background-color: #ff4d4f;
    border-radius: 50%;
    border: 2rpx solid white;
  }
  
  /* 消息内容 */
  .message-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 12rpx;
    min-width: 0;
  }
  
  .message-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  
  .name-wrapper {
    display: flex;
    align-items: center;
    flex: 1;
    min-width: 0;
  }
  
  .contact-name {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 300rpx;
  }
  
  .case-tag {
    font-size: 22rpx;
    color: #666;
    background-color: #f5f5f5;
    padding: 4rpx 12rpx;
    border-radius: 12rpx;
    margin-left: 12rpx;
    flex-shrink: 0;
  }
  
  .message-time {
    font-size: 24rpx;
    color: #999;
    flex-shrink: 0;
    margin-left: 20rpx;
  }
  
  /* 消息预览 */
  .message-preview {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .last-message {
    font-size: 28rpx;
    color: #666;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    min-width: 0;
  }
  
  .unread-badge {
    background-color: #ff4d4f;
    color: white;
    font-size: 22rpx;
    padding: 4rpx 12rpx;
    border-radius: 20rpx;
    min-width: 30rpx;
    text-align: center;
    margin-left: 16rpx;
    flex-shrink: 0;
  }
  
  /* 空状态 */
  .empty-state {
    text-align: center;
    padding: 120rpx 32rpx;
  }
  
  .empty-icon {
    font-size: 100rpx;
    color: #ccc;
    margin-bottom: 32rpx;
  }
  
  .empty-title {
    display: block;
    font-size: 36rpx;
    color: #999;
    margin-bottom: 16rpx;
    font-weight: 600;
  }
  
  .empty-desc {
    display: block;
    font-size: 28rpx;
    color: #ccc;
    margin-bottom: 48rpx;
  }
  
  /* 底部导航 */
  .custom-tabbar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120rpx;
    background: #fff;
    border-top: 1rpx solid #f0f0f0;
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 0 20rpx;
    z-index: 1000;
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .tab-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    transition: all 0.3s ease;
  }
  
  .tab-item.active .tab-icon {
    transform: translateY(-10rpx);
  }
  
  .tab-item.active .tab-text {
    color: #1890ff;
    font-weight: 600;
  }
  
  .tab-icon {
    width: 48rpx;
    height: 48rpx;
    margin-bottom: 8rpx;
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;
