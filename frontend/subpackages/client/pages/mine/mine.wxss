/* pages/mine/mine.wxss */
/* 个人中心页面样式 */
.mine-page {
    background-color: #f5f7fb;
    min-height: 100vh;
    padding-bottom: 140rpx;
  }
  
  /* 用户信息卡片 */
  .user-card {
    background-color: #fff;
    padding: 60rpx 0 40rpx;
    text-align: center;
    margin-bottom: 20rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .user-avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto 24rpx;
    border: 4rpx solid #e6f7ff;
    background-color: #f5f5f5;
  }
  
  .avatar-img {
    width: 100%;
    height: 100%;
  }
  
  .user-name {
    display: block;
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 12rpx;
  }
  
  .user-id {
    font-size: 24rpx;
    color: #999;
  }
  
  /* 功能菜单 */
  .menu-list {
    background-color: #fff;
    margin-bottom: 20rpx;
  }
  
  .menu-item {
    display: flex;
    align-items: center;
    padding: 32rpx 24rpx;
    border-bottom: 1rpx solid #f5f5f5;
    transition: background-color 0.3s ease;
  }
  
  .menu-item:active {
    background-color: #f9f9f9;
  }
  
  .menu-item:last-child {
    border-bottom: none;
  }
  
  .menu-icon {
    width: 40rpx;
    height: 40rpx;
    margin-right: 24rpx;
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;
  }
  
