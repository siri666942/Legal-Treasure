  .menu-name {
    flex: 1;
    font-size: 32rpx;
    color: #333;
  }
  
  .menu-arrow {
    font-size: 40rpx;
    color: #ccc;
    margin-left: 16rpx;
    transform: scale(1.5);
  }
  
  /* 退出登录按钮 */
  .logout-btn {
    margin: 40rpx 24rpx;
    background-color: #fff;
    color: #ff4d4f;
    font-size: 32rpx;
    font-weight: 500;
    text-align: center;
    padding: 28rpx;
    border-radius: 12rpx;
    transition: background-color 0.3s ease;
  }
  
  .logout-btn:active {
    background-color: #fff2f0;
  }
  
  /* 底部导航 */
  .custom-tabbar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120rpx;
    background: #fff;
    border-top: 1rpx solid #f0f0f0;
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 0 20rpx;
    z-index: 1000;
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .tab-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    transition: all 0.3s ease;
  }
  
  .tab-item.active .tab-icon {
    transform: translateY(-10rpx);
  }
  
  .tab-item.active .tab-text {
    color: #1890ff;
    font-weight: 600;
  }
  
  .tab-icon {
    width: 48rpx;
    height: 48rpx;
    margin-bottom: 8rpx;
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;
    transition: transform 0.3s ease;
  }
  
