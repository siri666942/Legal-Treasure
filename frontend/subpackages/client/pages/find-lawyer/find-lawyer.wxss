/* pages/find-lawyer/index.wxss */
.find-lawyer-page {
    min-height: 100vh;
    background-color: #f7f8fa;
    padding-bottom: env(safe-area-inset-bottom);
  }
  
  /* 搜索栏 - 保持白色背景 */
  .search-section {
    background-color: #ffffff;
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #eeeeee;
  }
  
  .search-box {
    display: flex;
    align-items: center;
    background-color: #f5f5f5;
    border-radius: 50rpx;
    padding: 0 30rpx;
    height: 80rpx;
  }
  
  .search-icon {
    font-size: 32rpx;
    margin-right: 20rpx;
    color: #999999;
  }
  
  .search-input {
    flex: 1;
    height: 100%;
    font-size: 28rpx;
    color: #333333;
  }
  
  .placeholder {
    color: #999999;
    font-size: 28rpx;
  }
  
  .clear-btn {
    font-size: 28rpx;
    color: #cccccc;
    margin-left: 20rpx;
    padding: 10rpx;
    opacity: 0;
    transition: opacity 0.3s;
  }
  
  .clear-btn.show {
    opacity: 1;
  }
  
  /* 筛选组件 */
  .filter-section {
    background-color: #ffffff;
    padding: 20rpx 30rpx;
    position: sticky;
    top: 0;
    z-index: 10;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  }
  
  .filter-scroll {
    white-space: nowrap;
    width: 100%;
    height: 80rpx;
  }
  
  .filter-tags {
    display: inline-flex;
    align-items: center;
    gap: 20rpx;
    height: 100%;
  }
  
  .filter-tag {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12rpx 32rpx;
    font-size: 28rpx;
    color: #666666;
    background-color: #f5f5f5;
    border-radius: 40rpx;
    white-space: nowrap;
    transition: all 0.3s ease;
  }
  
  .filter-tag.active {
    background-color: #2a6df5;
    color: #ffffff;
    font-weight: 500;
    box-shadow: 0 4rpx 12rpx rgba(42, 109, 245, 0.2);
  }
  
  /* 搜索结果 */
  .search-result {
    background-color: #ffffff;
    padding: 20rpx 30rpx;
    border-bottom: 1rpx solid #eeeeee;
  }
  
  .result-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .result-text {
    font-size: 28rpx;
    color: #333333;
  }
  
  .result-count {
    color: #2a6df5;
    font-weight: 500;
  }
  
  /* 律师列表 */
  .lawyer-list {
    padding: 30rpx;
  }
  
  .lawyer-row {
    display: flex;
    justify-content: space-between;
    margin-bottom: 30rpx;
  }
  
  .lawyer-card-wrapper {
    width: 50%;
    padding: 0 15rpx;
  }
  
  .lawyer-card {
    background: #ffffff;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.05);
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: all 0.3s ease;
  }
  
  .lawyer-card:active {
    transform: translateY(-4rpx);
    box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.1);
  }
  
  /* 使用emoji头像 */
  .lawyer-avatar-emoji {
    font-size: 60rpx;
    width: 120rpx;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f0f5ff;
    border-radius: 50%;
    margin-bottom: 20rpx;
    border: 4rpx solid #ffffff;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  }
  
  .lawyer-info {
    width: 100%;
    text-align: center;
    margin-bottom: 20rpx;
  }
  
  .lawyer-name {
    display: block;
    font-size: 32rpx;
    font-weight: 600;
    color: #333333;
    margin-bottom: 8rpx;
  }
  
  .lawyer-title {
    display: block;
    font-size: 24rpx;
    color: #2a6df5;
    margin-bottom: 16rpx;
  }
  
  .lawyer-intro {
    display: block;
    font-size: 26rpx;
    color: #666666;
    line-height: 1.4;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    height: 72rpx;
  }
  
  .lawyer-tags {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10rpx;
    margin-bottom: 24rpx;
    width: 100%;
  }
  
  .tag {
    font-size: 22rpx;
    color: #666666;
    background-color: #f7f8fa;
    padding: 4rpx 12rpx;
    border-radius: 12rpx;
    white-space: nowrap;
  }
  
  .consult-btn {
    width: 100%;
    height: 64rpx;
    background: linear-gradient(135deg, #2a6df5, #4a8eff);
    border-radius: 32rpx;
    color: #ffffff;
    font-size: 28rpx;
    font-weight: 500;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }
  
  .consult-btn:active {
    opacity: 0.9;
    transform: scale(0.98);
  }
  
  /* 空状态 */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
  }
  
  .empty-icon {
    font-size: 120rpx;
    margin-bottom: 40rpx;
    opacity: 0.3;
  }
  
  .empty-text {
    font-size: 28rpx;
    color: #999999;
    margin-bottom: 30rpx;
  }
  
  .reset-btn {
    padding: 20rpx 40rpx;
    background-color: #2a6df5;
    color: #ffffff;
    border-radius: 40rpx;
    font-size: 28rpx;
    font-weight: 500;
  }