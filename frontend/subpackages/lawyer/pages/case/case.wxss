/* subpackages/lawyer/pages/case/case.wxss - 纯色蓝白配色 */
.case-page {
    background: #f5faff;
    min-height: 100vh;
    padding-bottom: 140rpx;
    font-family: -apple-system, BlinkMacSystemFont, 'PingFang SC', 'Helvetica Neue', sans-serif;
  }
  
  /* ===== 搜索栏 ===== */
  .search-wrapper {
    display: flex;
    align-items: center;
    gap: 20rpx;
    padding: 28rpx 32rpx 20rpx;
    background: transparent;
  }
  
  .search-box {
    flex: 1;
    background: #ffffff;
    border-radius: 40rpx;
    padding: 20rpx 28rpx;
    display: flex;
    align-items: center;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
    border: 1rpx solid #e2e8f0;
  }
  
  .search-icon {
    font-size: 28rpx;
    color: #94a3b8;
    margin-right: 16rpx;
  }
  
  .search-input {
    flex: 1;
    font-size: 28rpx;
    color: #1e293b;
    height: 40rpx;
    line-height: 40rpx;
  }
  
  .search-placeholder {
    color: #94a3b8;
    font-size: 28rpx;
  }
  
  .search-btn {
    background: #3182ce;
    color: white;
    padding: 18rpx 36rpx;
    border-radius: 40rpx;
    font-size: 28rpx;
    font-weight: 600;
    box-shadow: 0 2rpx 6rpx rgba(49,130,206,0.2);
    transition: all 0.2s;
    border: none;
    white-space: nowrap;
  }
  
  .search-btn:active {
    opacity: 0.8;
    transform: scale(0.96);
  }
  
  /* ===== 操作按钮组 - 纯蓝色 ===== */
  .action-group {
    display: flex;
    gap: 24rpx;
    padding: 0 32rpx 28rpx;
  }
  
  .action-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12rpx;
    padding: 20rpx 24rpx;
    border-radius: 48rpx;
    background: #3182ce;
    box-shadow: 0 2rpx 6rpx rgba(49,130,206,0.2);
    border: none;
    transition: all 0.2s;
  }
  
  .action-btn:active {
    opacity: 0.8;
    transform: scale(0.97);
  }
  
  .create-btn,
  .history-btn {
    background: #3182ce;
  }
  
  .btn-icon {
    font-size: 32rpx;
    color: white;
  }
  
  .btn-text {
    font-size: 28rpx;
    font-weight: 600;
    color: white;
  }
  
  /* ===== 列表标题 ===== */
  .list-title {
    padding: 16rpx 32rpx 12rpx;
    display: flex;
    align-items: baseline;
    border-bottom: 2rpx solid #e2e8f0;
    margin: 0 32rpx 16rpx;
  }
  
  .title-text {
    font-size: 32rpx;
    font-weight: 700;
    color: #1e293b;
    margin-right: 12rpx;
    position: relative;
    padding-left: 16rpx;
  }
  
  .title-text::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6rpx;
    height: 30rpx;
    background: #3182ce;
    border-radius: 3rpx;
  }
  
  .title-count {
    font-size: 26rpx;
    color: #64748b;
    background: #f1f5f9;
    padding: 4rpx 18rpx;
    border-radius: 30rpx;
  }
  
  /* ===== 案件卡片 ===== */
  .case-list {
    padding: 0 32rpx;
  }
  
  .case-card {
    background: #ffffff;
    border-radius: 24rpx;
    padding: 28rpx 28rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.04);
    border: 1rpx solid #edf2f7;
    transition: all 0.2s;
  }
  
  .case-card:active {
    background: #f8fafc;
    border-color: #3182ce;
    transform: translateY(-2rpx);
    box-shadow: 0 4rpx 12rpx rgba(49,130,206,0.1);
  }
  
  /* 卡片头部 */
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 12rpx;
  }
  
  .case-no {
    font-size: 26rpx;
    color: #3182ce;
    font-weight: 600;
    background: #ebf8ff;
    padding: 6rpx 18rpx;
    border-radius: 30rpx;
  }
  
  .case-date {
    font-size: 24rpx;
    color: #94a3b8;
    white-space: nowrap;
  }
  
  /* 标题行 */
  .card-title {
    margin-bottom: 20rpx;
  }
  
  .case-title {
    font-size: 30rpx;
    font-weight: 600;
    color: #1e293b;
    line-height: 1.4;
    display: block;
  }
  
  /* 当事人/类型网格 */
  .card-info {
    display: grid;
    grid-template-columns: auto 1fr auto 1fr;
    align-items: center;
    gap: 12rpx 8rpx;
    background: #f8fafc;
    border-radius: 16rpx;
    padding: 16rpx 20rpx;
    margin-bottom: 20rpx;
    border: 1rpx solid #edf2f7;
  }
  
  .info-label {
    font-size: 24rpx;
    color: #64748b;
    white-space: nowrap;
  }
  
  .info-value {
    font-size: 26rpx;
    color: #1e293b;
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  /* 进度条 */
  .progress-area {
    margin-bottom: 24rpx;
  }
  
  .progress-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10rpx;
  }
  
  .progress-label {
    font-size: 26rpx;
    color: #475569;
  }
  
  .progress-value {
    font-size: 26rpx;
    font-weight: 600;
    color: #3182ce;
  }
  
  .progress-track {
    height: 8rpx;
    background: #e2e8f0;
    border-radius: 10rpx;
    overflow: hidden;
  }
  
  .progress-fill {
    height: 100%;
    border-radius: 10rpx;
    transition: width 0.3s;
  }
  
  .progress-processing {
    background: #3182ce;
  }
  
  .progress-completed {
    background: #38a169;
  }
  
  .progress-pending {
    background: #dd6b20;
  }
  
  /* 卡片操作按钮 */
  .card-actions {
    display: flex;
    justify-content: flex-start;
    gap: 20rpx;
    border-top: 1rpx solid #edf2f7;
    padding-top: 24rpx;
  }
  
  .action-detail,
  .action-contact {
    font-size: 26rpx;
    padding: 12rpx 28rpx;
    border-radius: 36rpx;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .action-detail {
    background: #ebf8ff;
    color: #3182ce;
    border: 1rpx solid #bee3f8;
  }
  
  .action-detail:active {
    background: #bee3f8;
    transform: scale(0.96);
  }
  
  .action-contact {
    background: #f0fff4;
    color: #38a169;
    border: 1rpx solid #c6f6d5;
  }
  
  .action-contact:active {
    background: #c6f6d5;
    transform: scale(0.96);
  }
  
  /* ===== 加载更多 ===== */
  .load-more {
    text-align: center;
    padding: 30rpx 0 50rpx;
  }
  
  .load-more-btn {
    display: inline-block;
    font-size: 28rpx;
    color: #3182ce;
    padding: 18rpx 48rpx;
    background: #ebf8ff;
    border-radius: 48rpx;
    border: 1rpx solid #bee3f8;
    font-weight: 500;
    transition: all 0.2s;
  }
  
  .load-more-btn:active {
    background: #bee3f8;
    transform: scale(0.96);
  }
  
  /* ===== 空状态 ===== */
  .empty-state {
    text-align: center;
    padding: 100rpx 32rpx;
    background: transparent;
  }
  
  .empty-icon {
    font-size: 100rpx;
    color: #cbd5e0;
    margin-bottom: 24rpx;
  }
  
  .empty-title {
    display: block;
    font-size: 36rpx;
    font-weight: 700;
    color: #2d3e50;
    margin-bottom: 16rpx;
  }
  
  .empty-desc {
    display: block;
    font-size: 28rpx;
    color: #94a3b8;
    margin-bottom: 48rpx;
  }
  
  .empty-action {
    display: inline-block;
    background: #3182ce;
    color: white;
    padding: 24rpx 64rpx;
    border-radius: 48rpx;
    font-size: 32rpx;
    font-weight: 600;
    box-shadow: 0 2rpx 8rpx rgba(49,130,206,0.2);
    transition: all 0.2s;
  }
  
  .empty-action:active {
    opacity: 0.8;
    transform: scale(0.96);
  }
  
  /* ===== 底部导航（完全保留原始SVG，仅激活色改为 #3182ce）===== */
  .custom-tabbar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    height: 120rpx;
    background: #ffffff;
    border-top: 1rpx solid #edf2f7;
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 0 20rpx;
    z-index: 1000;
    box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.02);
    backdrop-filter: blur(10px);
  }
  
  .tab-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    transition: all 0.2s;
  }
  
  .tab-item.active .tab-icon {
    transform: translateY(-6rpx);
  }
  
  .tab-item.active .tab-text {
    color: #3182ce;
    font-weight: 600;
  }
  
  .tab-icon {
    width: 48rpx;
    height: 48rpx;
    margin-bottom: 8rpx;
    background-position: center;
    background-repeat: no-repeat;
    background-size: contain;
    transition: transform 0.2s;
  }
  
