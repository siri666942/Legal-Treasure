    font-size: 24rpx;
    color: #999;
  }
  
  /* 响应式 */
  @media screen and (max-width: 375px) {
    .search-wrapper,
    .action-group,
    .case-list {
      padding-left: 24rpx;
      padding-right: 24rpx;
    }
    .case-card {
      padding: 24rpx;
    }
    .card-info {
      grid-template-columns: auto 1fr;
      gap: 12rpx;
    }
    .info-label:nth-child(3) {
      grid-column: 1;
    }
    .info-value:nth-child(4) {
      grid-column: 2;
    }
  }