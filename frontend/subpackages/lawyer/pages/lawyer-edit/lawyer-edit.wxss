/* subpackages/lawyer/pages/lawyer-edit/lawyer-edit.wxss */
.lawyer-edit-page {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background: #f7f8fa;
  }
  
  /* 内容区域 */
  .edit-content {
    flex: 1;
    height: 100%;
    padding-bottom: 120rpx;
  }
  
  /* ===== 头像区域（支持图片和表情）===== */
  .avatar-section {
    background: linear-gradient(135deg, #2a6df5 0%, #1a4cb5 100%);
    padding: 40rpx 30rpx 30rpx;
    margin-bottom: 20rpx;
    border-radius: 0 0 30rpx 30rpx;
    display: flex;
    justify-content: center;
  }
  .avatar-container {
    display: flex;
    justify-content: center;
  }
  .avatar-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .avatar-emoji {
    font-size: 80rpx;
    width: 140rpx;
    height: 140rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #ffffff 0%, #f0f5ff 100%);
    border-radius: 50%;
    border: 6rpx solid rgba(255, 255, 255, 0.8);
    margin-bottom: 16rpx;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  }
  .avatar-image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    border: 6rpx solid rgba(255, 255, 255, 0.8);
    margin-bottom: 16rpx;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
    background-color: #f0f5ff;
    object-fit: cover;
  }
  .avatar-hint {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.9);
    background: rgba(0, 0, 0, 0.2);
    padding: 8rpx 20rpx;
    border-radius: 20rpx;
  }
  
  /* ===== 卡片通用样式 ===== */
  .edit-card {
    background: #ffffff;
    border-radius: 20rpx;
    margin: 0 30rpx 30rpx;
    padding: 30rpx;
    box-shadow: 0 8rpx 30rpx rgba(42, 108, 245, 0.08);
    border: 1rpx solid #e6f0ff;
  }
  .card-header {
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #f0f7ff;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .card-title {
    font-size: 30rpx;
    font-weight: 700;
    color: #1a4cb5;
    position: relative;
    padding-left: 20rpx;
  }
  .card-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6rpx;
    height: 24rpx;
    background-color: #2a6df5;
    border-radius: 3rpx;
  }
  .card-content {
    display: flex;
    flex-direction: column;
    gap: 24rpx;
  }
  
  /* 带操作按钮的标题 */
  .section-action {
    display: flex;
    align-items: center;
    color: #2a6df5;
    font-size: 26rpx;
    font-weight: 500;
    background: rgba(42, 108, 245, 0.1);
    padding: 12rpx 20rpx;
    border-radius: 30rpx;
  }
  .action-icon {
    font-size: 28rpx;
    margin-right: 6rpx;
  }
  .action-text {
    font-size: 26rpx;
  }
  
  /* ===== 表单项样式 ===== */
  .form-item {
    width: 100%;
  }
  .form-row {
    display: flex;
    gap: 24rpx;
  }
  .form-item.half {
    flex: 1;
  }
  .form-label {
    display: block;
    font-size: 26rpx;
    color: #333333;
    font-weight: 500;
    margin-bottom: 12rpx;
  }
  .required {
    color: #ff6b6b;
    margin-left: 4rpx;
  }
  .form-input {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 24rpx;
    font-size: 28rpx;
    color: #333333;
    background: #f8faff;
    border: 1rpx solid #e6f0ff;
    border-radius: 12rpx;
    box-sizing: border-box;
  }
  .form-textarea {
    width: 100%;
    min-height: 160rpx;
    padding: 20rpx 24rpx;
    font-size: 28rpx;
    color: #333333;
    background: #f8faff;
    border: 1rpx solid #e6f0ff;
    border-radius: 12rpx;
    box-sizing: border-box;
    line-height: 1.5;
  }
  .form-textarea.compact {
    min-height: 120rpx;
  }
  .textarea-counter {
    text-align: right;
    font-size: 24rpx;
    color: #999999;
    margin-top: 8rpx;
  }
  
  /* ===== 统计数据网格 ===== */
  .stats-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20rpx;
  }
  .stat-item {
    background: #f8faff;
    border: 1rpx solid #e6f0ff;
    border-radius: 16rpx;
    padding: 20rpx;
    display: flex;
    flex-direction: column;
  }
  .stat-label {
    font-size: 24rpx;
    color: #666666;
    margin-bottom: 12rpx;
    text-align: center;
  }
  .stat-input {
    width: 100%;
    text-align: center;
    font-size: 32rpx;
    font-weight: 600;
    color: #1a4cb5;
    background: none;
    border: none;
    padding: 0;
    height: 50rpx;
    line-height: 50rpx;
  }
  
  /* ===== 专业领域标签预览 ===== */
  .tags-preview {
    margin-top: 16rpx;
  }
  .tags-label {
    font-size: 24rpx;
    color: #666666;
    margin-bottom: 16rpx;
    display: block;
  }
  .tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
    min-height: 60rpx;
    background: #f8faff;
    border-radius: 12rpx;
    padding: 16rpx 20rpx;
  }
  .tag-item {
    background: linear-gradient(135deg, #2a6df5 0%, #1a4cb5 100%);
    color: #ffffff;
    font-size: 24rpx;
    font-weight: 500;
    padding: 8rpx 24rpx;
    border-radius: 30rpx;
    white-space: nowrap;
  }
  .tag-empty {
    font-size: 24rpx;
    color: #999999;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
  }
  
  /* ===== 工作经历 & 案例 ===== */
  .experience-list,
  .case-list {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  .experience-item,
  .case-item {
    background: #f8faff;
    border: 1rpx solid #e6f0ff;
    border-radius: 16rpx;
    padding: 24rpx;
  }
  .experience-header,
  .case-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
    padding-bottom: 16rpx;
    border-bottom: 1rpx solid #e6f0ff;
  }
  .experience-index,
  .case-index {
    font-size: 26rpx;
    font-weight: 600;
    color: #1a4cb5;
  }
  .action-delete {
    font-size: 24rpx;
    color: #ff6b6b;
    padding: 6rpx 16rpx;
    background: rgba(255, 107, 107, 0.1);
    border-radius: 20rpx;
  }
  
  /* ===== 底部填充 ===== */
  .bottom-padding {
    height: 40rpx;
  }
  
  /* ===== 底部操作栏 ===== */
  .edit-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #ffffff;
    padding: 20rpx 30rpx 40rpx;
    box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
    z-index: 100;
  }
  .footer-buttons {
    display: flex;
    gap: 20rpx;
  }
  .footer-btn {
    flex: 1;
    height: 88rpx;
    border-radius: 44rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12rpx;
    font-weight: 600;
    font-size: 28rpx;
    transition: all 0.3s ease;
  }
  .footer-btn:active {
    opacity: 0.8;
    transform: scale(0.98);
  }
  .cancel-btn {
    background: #f8faff;
    color: #666666;
    border: 1rpx solid #e6f0ff;
  }
  .preview-btn {
    background: #ffffff;
    color: #2a6df5;
    border: 2rpx solid #2a6df5;
  }
  .save-btn {
    background: linear-gradient(135deg, #2a6df5 0%, #1a4cb5 100%);
    color: #ffffff;
  }
  .btn-icon {
    font-size: 32rpx;
  }
  .btn-text {
    font-size: 28rpx;
    font-weight: 600;
  }
  
  /* ============ 预览浮窗样式 ============ */
  .preview-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.6);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2000;
  }
  .preview-modal-container {
    width: 95%;           
    max-width: 800rpx;      
    height: 90vh;           
    background-color: #fff;
    border-radius: 24rpx;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
  }
  .preview-modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 24rpx 30rpx;
    background-color: #f8fbff;
    border-bottom: 2rpx solid #e6f0ff;
  }
  .preview-modal-title {
    font-size: 32rpx;
    font-weight: 700;
    color: #1a4cb5;
  }
  .preview-modal-close {
    font-size: 40rpx;
    color: #718096;
    padding: 0 8rpx;
    line-height: 1;
  }
  .preview-modal-close:active {
    color: #2a6df5;
  }
  .preview-modal-content {
    flex: 1;
    overflow-y: auto;
    padding: 0;
    background: linear-gradient(180deg, #f0f7ff 0%, #ffffff 100%);
  }
  
  /* 以下为客户端名片样式的精确复刻 */
  .preview-lawyer-detail-page {
    padding-bottom: 40rpx;
  }
  
  /* 权威头衔区域 */
  .preview-lawyer-authority-section {
    background: linear-gradient(135deg, #2a6df5 0%, #1a4cb5 100%);
    padding: 40rpx 30rpx 30rpx;
    color: #ffffff;
    margin-bottom: 20rpx;
  }
  .preview-lawyer-header-card {
    display: flex;
    align-items: flex-start;
    margin-bottom: 30rpx;
  }
  .preview-lawyer-avatar-wrapper {
    position: relative;
    margin-right: 30rpx;
  }
  .preview-lawyer-avatar-emoji {
    font-size: 80rpx;
    width: 140rpx;
    height: 140rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #ffffff 0%, #f0f5ff 100%);
    border-radius: 50%;
    border: 6rpx solid rgba(255, 255, 255, 0.8);
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
  }
  .preview-lawyer-avatar-image {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    border: 6rpx solid rgba(255, 255, 255, 0.8);
    margin-bottom: 16rpx;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
    object-fit: cover;
  }
  .preview-lawyer-badge {
    position: absolute;
    bottom: 0;
    right: -10rpx;
    background: #ff9500;
    color: #ffffff;
    font-size: 20rpx;
    padding: 6rpx 12rpx;
    border-radius: 20rpx;
    font-weight: bold;
    transform: scale(0.9);
  }
  .preview-lawyer-intro-section {
    flex: 1;
  }
  .preview-lawyer-name {
    display: block;
    font-size: 44rpx;
    font-weight: 700;
    margin-bottom: 10rpx;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  }
  .preview-lawyer-title {
    display: block;
    font-size: 28rpx;
    opacity: 0.9;
    margin-bottom: 20rpx;
  }
  .preview-lawyer-organization {
    background: rgba(255, 255, 255, 0.15);
    border-radius: 12rpx;
    padding: 16rpx 20rpx;
  }
  .preview-organization-name {
    display: block;
    font-size: 26rpx;
    font-weight: 500;
    margin-bottom: 6rpx;
  }
  .preview-organization-rank {
    display: block;
    font-size: 22rpx;
    opacity: 0.8;
  }
  .preview-honor-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 16rpx;
  }
  .preview-honor-tag {
    background: rgba(255, 255, 255, 0.15);
    border: 1rpx solid rgba(255, 255, 255, 0.3);
    border-radius: 30rpx;
    padding: 12rpx 24rpx;
    font-size: 24rpx;
    font-weight: 500;
  }
  
  /* 整合信息模块 */
  .preview-integrated-info-section {
    background: #ffffff;
    border-radius: 20rpx;
    margin: 0 30rpx 30rpx;
    padding: 30rpx;
    box-shadow: 0 8rpx 30rpx rgba(42, 108, 245, 0.1);
  }
  
  /* 执业信息网格 */
  .preview-info-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20rpx;
    margin-bottom: 40rpx;
  }
  .preview-info-item {
    display: flex;
    align-items: center;
    padding: 20rpx;
    background: #f8faff;
    border-radius: 16rpx;
    border: 1rpx solid #e6f0ff;
  }
  .preview-info-icon {
    font-size: 36rpx;
    margin-right: 20rpx;
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(42, 108, 245, 0.1);
    border-radius: 12rpx;
  }
  .preview-info-content {
    flex: 1;
  }
  .preview-info-label {
    display: block;
    font-size: 22rpx;
    color: #666666;
    margin-bottom: 8rpx;
  }
  .preview-info-value {
    display: block;
    font-size: 26rpx;
    color: #1a4cb5;
    font-weight: 600;
    line-height: 1.3;
  }
  
  /* 统一标题样式 */
  .preview-section-header {
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #f0f7ff;
  }
  .preview-section-title {
    font-size: 30rpx;
    font-weight: 700;
    color: #1a4cb5;
    position: relative;
    padding-left: 20rpx;
  }
  .preview-section-title::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6rpx;
    height: 24rpx;
    background-color: #2a6df5;
    border-radius: 3rpx;
  }
  
  /* 专业资质 */
  .preview-qualification-section {
    margin-bottom: 40rpx;
  }
  .preview-qualification-list {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  .preview-qualification-item {
    display: flex;
    align-items: flex-start;
  }
  .preview-qualification-label {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-right: 30rpx;
    min-width: 120rpx;
  }
  .preview-qualification-icon {
    font-size: 36rpx;
    margin-bottom: 10rpx;
    width: 60rpx;
    height: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(42, 108, 245, 0.1);
    border-radius: 12rpx;
  }
  .preview-qualification-text {
    font-size: 24rpx;
    color: #666666;
    text-align: center;
  }
  .preview-qualification-value {
    flex: 1;
  }
  .preview-qualification-main {
    display: block;
    font-size: 26rpx;
    color: #333333;
    font-weight: 600;
    margin-bottom: 8rpx;
  }
  .preview-qualification-sub {
    display: block;
    font-size: 24rpx;
    color: #666666;
    line-height: 1.4;
  }
  
  /* 专业介绍 */
  .preview-introduction-section {
    margin-bottom: 40rpx;
  }
  .preview-introduction-content {
    background: #f8faff;
    border-radius: 16rpx;
    padding: 30rpx;
  }
  .preview-introduction-text {
    display: block;
    font-size: 26rpx;
    color: #333333;
    line-height: 1.6;
  }
  
  /* 专业领域 */
  .preview-expertise-section {
    margin-bottom: 10rpx;
  }
  .preview-expertise-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
  }
  .preview-expertise-tag {
    background: linear-gradient(135deg, #2a6df5 0%, #1a4cb5 100%);
    color: #ffffff;
    font-size: 24rpx;
    font-weight: 500;
    padding: 16rpx 28rpx;
    border-radius: 30rpx;
  }
  
  /* 专业数据统计 */
  .preview-stats-section {
    background: #ffffff;
    border-radius: 20rpx;
    margin: 0 30rpx 30rpx;
    padding: 30rpx;
    box-shadow: 0 8rpx 30rpx rgba(42, 108, 245, 0.1);
  }
  .preview-stats-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 24rpx;
  }
  .preview-stat-card {
    background: linear-gradient(135deg, #f8faff 0%, #f0f7ff 100%);
    border-radius: 20rpx;
    padding: 30rpx;
    text-align: center;
    border: 1rpx solid #e6f0ff;
  }
  .preview-stat-number {
    display: block;
    font-size: 36rpx;
    font-weight: 700;
    color: #1a4cb5;
    margin-bottom: 8rpx;
  }
  .preview-stat-label {
    display: block;
    font-size: 26rpx;
    color: #333333;
    font-weight: 600;
    margin-bottom: 4rpx;
  }
  .preview-stat-desc {
    display: block;
    font-size: 22rpx;
    color: #666666;
  }
  .preview-title-text {
    font-size: 30rpx;
    font-weight: 700;
    color: #1a4cb5;
    position: relative;
    padding-left: 20rpx;
  }
  .preview-title-text::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 6rpx;
    height: 24rpx;
    background-color: #2a6df5;
    border-radius: 3rpx;
  }
  
  /* 执业经历 */
  .preview-experience-section {
    background: #ffffff;
    border-radius: 20rpx;
    margin: 0 30rpx 30rpx;
    padding: 30rpx;
    box-shadow: 0 8rpx 30rpx rgba(42, 108, 245, 0.1);
  }
  .preview-experience-timeline {
    position: relative;
    padding-left: 40rpx;
  }
  .preview-experience-timeline::before {
    content: '';
    position: absolute;
    left: 15rpx;
    top: 0;
    bottom: 0;
    width: 2rpx;
    background: #2a6df5;
  }
  .preview-timeline-item {
    position: relative;
    margin-bottom: 40rpx;
  }
  .preview-timeline-item:last-child {
    margin-bottom: 0;
  }
  .preview-timeline-dot {
    position: absolute;
    left: -42rpx;
    top: 0;
    width: 30rpx;
    height: 30rpx;
    background: #ffffff;
    border: 4rpx solid #2a6df5;
    border-radius: 50%;
    z-index: 1;
  }
  .preview-timeline-content {
    background: #f8faff;
    border-radius: 16rpx;
    padding: 24rpx;
  }
  .preview-timeline-period {
    display: block;
    font-size: 24rpx;
    color: #2a6df5;
    font-weight: 600;
    margin-bottom: 8rpx;
  }
  .preview-timeline-position {
    display: block;
    font-size: 26rpx;
    color: #333333;
    font-weight: 600;
    margin-bottom: 12rpx;
  }
  .preview-timeline-detail {
    display: block;
    font-size: 24rpx;
    color: #666666;
    line-height: 1.5;
  }
  
  /* 代表性案例 */
  .preview-case-section {
    background: #ffffff;
    border-radius: 20rpx;
    margin: 0 30rpx 30rpx;
    padding: 30rpx;
    box-shadow: 0 8rpx 30rpx rgba(42, 108, 245, 0.1);
  }
  .preview-case-list {
    display: flex;
    flex-direction: column;
    gap: 30rpx;
  }
  .preview-case-card {
    background: #f8faff;
    border-radius: 20rpx;
    padding: 30rpx;
    border: 1rpx solid #e6f0ff;
  }
  .preview-case-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 20rpx;
  }
  .preview-case-title {
    font-size: 28rpx;
    font-weight: 600;
    color: #1a4cb5;
    flex: 1;
    margin-right: 20rpx;
  }
  .preview-case-type {
    font-size: 22rpx;
    color: #ffffff;
    background: #ff9500;
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
    font-weight: 500;
  }
  .preview-case-detail {
    display: block;
    font-size: 24rpx;
    color: #333333;
    line-height: 1.5;
    margin-bottom: 20rpx;
  }
  .preview-case-result {
    display: flex;
    align-items: flex-start;
  }
  .preview-result-label {
    font-size: 24rpx;
    color: #666666;
    font-weight: 500;
    margin-right: 12rpx;
    white-space: nowrap;
  }
  .preview-result-text {
    font-size: 24rpx;
    color: #1a4cb5;
    font-weight: 600;
    line-height: 1.4;
  }
  
  /* 响应式调整 */
  @media screen and (max-width: 375px) {
    .edit-card {
      margin: 0 20rpx 20rpx;
      padding: 24rpx;
    }
    .stats-grid {
      grid-template-columns: 1fr;
